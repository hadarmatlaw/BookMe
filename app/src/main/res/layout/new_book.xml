<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editBookName"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="book name"
        android:id="@+id/bookName"
        android:layout_toLeftOf="@+id/editBookName"
        android:layout_alignBaseline="@+id/editBookName"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addbtn"
        android:layout_alignTop="@+id/editAuthor"/>
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginEnd="39dp" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="authorName"
        android:id="@+id/authorName"
        android:layout_below="@+id/bookName"/>
        <!--android:layout_alignStart="@+id/bookName" />-->

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editAuthor"
        android:layout_below="@+id/editBookName"/>
        <!--android:layout_toEndOf="@+id/authorName" />-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Data"
        android:id="@+id/alldatabtn"
        android:layout_below="@+id/authorName"
        android:layout_marginTop="43dp" />
        <!--android:layout_alignStart="@+id/authorName"-->


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:id="@+id/viewall"
        android:layout_alignTop="@+id/alldatabtn"
        android:layout_alignRight="@+id/editBookName"
        android:layout_alignEnd="@+id/editBookName" />
        <!--android:layout_toStartOf="@+id/addbtn" />-->


</RelativeLayout>
